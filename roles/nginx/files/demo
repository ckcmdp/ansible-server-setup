upstream app {
        server unix:/var/www/demo/shared/tmp/sockets/puma.sock fail_timeout=0;
      }

      server {
        server_name localhost;

        root /var/www/demo/current/public;

        access_log /var/www/demo/current/log/nginx.access.log;
        error_log /var/www/demo/current/log/nginx.error.log info;

        include /etc/nginx/shared.conf;
      }